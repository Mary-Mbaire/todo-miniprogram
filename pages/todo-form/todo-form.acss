.form-container {
  padding: 24rpx;
}

.form-heading {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.submit-btn {
  margin-top: 40rpx;
  background-color: green;
  border-color: green;
  box-shadow: none;
}

.error-text {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-top: 3rpx;
  margin-bottom: 10rpx;
}